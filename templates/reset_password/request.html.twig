{% extends 'base.html.twig' %}

{% block title %}Zresetuj swoje hasło
{% endblock %}

{% block content %}

	<div class="d-flex justify-content-center align-items-center mt-5 pt-5">
		<div class="border shadow-sm col-xl-4 col-lg-6 col-md-8 col-sm-10 col-12 ">
			<form method="post" class="m-4">
				{% for flash_error in app.flashes('reset_password_error') %}
					<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
				{% endfor %}
				<h3>Zresetuj swoje hasło</h3>

				{{ form_row(form.email) }}

				{# <button class="btn btn-primary">Resetuj</button> #}
				<div class="d-grid gap-2 d-sm-block">
					<button class="btn btn-primary" name="save">Resetuj</button>
					<a class="btn btn-outline-secondary" href="{{ path('app_members')}}">Anuluj</a>
				</div>
				{{ form_rest(form) }}
			</form>
		</div>
	</div>
{% endblock %}
